
@{
    ViewData["Title"] = "Conta";

    try
    {
        if (TempData["Message"] != null && TempData["Message"].ToString() != "")
        {
            <div class="alert alert-@TempData["MessageType"].ToString() alert-dismissible fade show" role="alert">
                @TempData["Message"].ToString()
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
    }
    catch { }
}

<h1>Contas</h1>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>ID</th>
            <th>Nome</th>
            <th>Saldo</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var conta in ViewBag.contas)
        {
            <tr>
                <td><a href="../Conta/RemoverConta/@conta.Id" type="button" class="btn btn-danger">EXCLUIR</a></td>
                <td>@conta.Id</td>
                <td>@conta.Nome</td>
                <td>@conta.Saldo</td>
            </tr>
        }

    </tbody>
</table>

<a href="../Conta/CriarConta" type="button" class="btn btn-primary">CRIAR NOVA CONTA</a>