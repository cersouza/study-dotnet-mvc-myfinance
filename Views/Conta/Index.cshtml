
@{
    ViewData["Title"] = "Conta";
}

<h1>Contas</h1>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>ID</th>
            <th>Nome</th>
            <th>Saldo</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var conta in ViewBag.contas)
        {
            <tr>
                <td><a href="../Conta/RemoverConta/@conta.Id" type="button" class="btn btn-danger">EXCLUIR</a></td>
                <td>@conta.Id</td>
                <td>@conta.Nome</td>
                <td>@conta.Saldo</td>
            </tr>
        }

    </tbody>    
</table>

<a href="../Conta/CriarConta" type="button" class="btn btn-primary">CRIAR NOVA CONTA</a>